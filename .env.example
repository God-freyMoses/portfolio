# Environment Variables Template
# Copy this file to .env.local for development
# For production, set these in your deployment platform (Vercel, etc.)

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Tshegofatso Moses Portfolio"
NEXT_PUBLIC_SITE_DESCRIPTION="Full-Stack Software Developer & UI/UX Designer"

# =============================================================================
# CONTACT FORM & EMAIL CONFIGURATION
# =============================================================================
# SMTP Configuration for contact form
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email addresses
CONTACT_FROM_EMAIL=noreply@yourdomain.com
CONTACT_TO_EMAIL=your-email@gmail.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Vercel Postgres or other PostgreSQL database
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically configured on Vercel)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# =============================================================================
# CONTENT MANAGEMENT
# =============================================================================
# GitHub repository for content updates (if using Git-based CMS)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
GITHUB_REPO=username/portfolio-content

# =============================================================================
# SECURITY & API KEYS
# =============================================================================
# NextAuth.js (if implementing authentication later)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Rate limiting and security
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Newsletter service (Mailchimp, ConvertKit, etc.)
NEWSLETTER_API_KEY=your-newsletter-api-key
NEWSLETTER_LIST_ID=your-list-id

# Social media API keys (if needed for dynamic content)
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_API_KEY=your-linkedin-api-key

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development flags
NEXT_PUBLIC_DEV_MODE=true
NEXT_PUBLIC_DEBUG_MODE=false

# Feature flags
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=true
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true